{
  "name": "playwright-power-platform-toolkit",
  "version": "1.0.0",
  "description": "Comprehensive testing framework for Microsoft Power Platform with Playwright - includes Page Object Models, test fixtures, API testing, accessibility testing, and authentication utilities for Power Apps, Dataverse, and Power Platform applications",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "README.md",
    "LICENSE",
    "docs"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "tsc --watch",
    "clean": "rimraf lib",
    "prepublishOnly": "npm run clean && npm run build",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\""
  },
  "keywords": [
    "playwright",
    "power-platform",
    "power-apps",
    "dataverse",
    "testing",
    "test-framework",
    "page-object-model",
    "test-fixtures",
    "e2e-testing",
    "automation",
    "api-testing",
    "accessibility-testing",
    "wcag",
    "a11y",
    "microsoft",
    "dynamics365"
  ],
  "author": {
    "name": "Deepak Kamboj",
    "url": "https://github.com/deepakkamboj"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/deepakkamboj/playwright-power-platform-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/deepakkamboj/playwright-power-platform-toolkit/issues"
  },
  "homepage": "https://github.com/deepakkamboj/playwright-power-platform-toolkit#readme",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "dotenv": "^16.4.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@playwright/test": "^1.57.0"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "playwright-ms-auth": "^0.0.14"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
