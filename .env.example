# ============================================
# Power Apps Configuration
# ============================================
POWER_APPS_BASE_URL=https://make.powerapps.com
POWER_APPS_DEFAULT_URL=/home
POWER_APPS_ENVIRONMENT_ID=your-environment-id-here
CANVAS_DESIGNER_URL=https://apps.powerapps.com/

# ============================================
# Microsoft Authentication Configuration
# Required for playwright-ms-auth package
# ============================================

# User credentials
MS_AUTH_EMAIL=your-email@domain.com

# For password authentication:
MS_USER_PASSWORD=your-password-here
MS_AUTH_CREDENTIAL_TYPE=password
MS_AUTH_CREDENTIAL_PROVIDER=environment
MS_AUTH_ENV_VARIABLE_NAME=MS_USER_PASSWORD

# For certificate authentication (alternative to password):
# MS_AUTH_CREDENTIAL_TYPE=certificate
# MS_AUTH_CREDENTIAL_PROVIDER=local-file
# MS_AUTH_LOCAL_FILE_PATH=./cert/your-cert.Pfx
# MS_AUTH_CERTIFICATE_PASSWORD=your-cert-password

# Authentication settings
MS_AUTH_HEADLESS=true
MS_AUTH_TIMEOUT=60000

# Azure Configuration
AZURE_TENANT_ID=your-tenant-id-here
AUTH_ENDPOINT=https://login.microsoftonline.com

# ============================================
# Playwright AI Reporter Configuration
# ============================================

# Performance thresholds (in seconds)
SLOW_TEST_THRESHOLD=3
TIMEOUT_WARNING_THRESHOLD=20
MAX_SLOW_TESTS_TO_SHOW=5

# AI Features (true/false)
GENERATE_FIX=false
CREATE_BUG=false
GENERATE_PR=false
PUBLISH_TO_DB=false
SEND_EMAIL=false

# Email Notification Settings (if SEND_EMAIL=true)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=no-reply@yourdomain.com
EMAIL_TO=team@yourdomain.com
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# OpenAI Configuration (for AI fix suggestions)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# ============================================
# Test Configuration
# ============================================
HEADLESS=true
BROWSER=chromium
WORKERS=1
RETRIES=0
TIMEOUT=30000

# ============================================
# Feature Flags
# ============================================
FEATURE_DISABLE_COMPONENTS_FOR_TEST=true
